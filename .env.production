# Production Environment Variables
# Copy this file to .env and fill in the actual values

# Application
NODE_ENV=production
PORT=3000
APP_NAME=Sysora Hotel Management Platform
APP_VERSION=1.0.0

# Database
MONGODB_URI=mongodb+srv://username:password@sysora-cluster.mongodb.net/sysora-production?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# S3 Configuration
S3_BUCKET_NAME=sysora-uploads-prod
S3_REGION=us-east-1

# CloudFront
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Email Configuration (SES)
EMAIL_FROM=noreply@sysora.com
EMAIL_REPLY_TO=support@sysora.com
SES_REGION=us-east-1

# Redis (for caching)
REDIS_URL=redis://sysora-redis-cluster.cache.amazonaws.com:6379

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
CORS_ORIGIN=https://sysora.com,https://www.sysora.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Payment Gateway (if applicable)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CHAT_SUPPORT=true
ENABLE_MOBILE_APP=true

# API Configuration
API_BASE_URL=https://api.sysora.com
FRONTEND_URL=https://sysora.com

# Database Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/sysora.crt
SSL_KEY_PATH=/etc/ssl/private/sysora.key

# Health Check
HEALTH_CHECK_ENDPOINT=/api/health
HEALTH_CHECK_TIMEOUT=5000

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=24h

# Timezone
DEFAULT_TIMEZONE=Africa/Algiers

# Language
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en,fr
